#!/bin/bash

# Global identity
git config --global user.email "mantasvisakavicius@gmail.com"
git config --global user.name "MantasVI"

# Repo state
git status                    # parodo repo busena

# Adding files
git add .                     # prideda viska is current dir (recommended)
git add --all                 # prideda viska (iskaitant deletions)
git add file.txt              # prideda konkretu faila
git add *                     # ❌ bloga praktika (neima hidden failu, gali bugint)

# Commit
git commit -m "message"       # sukuria commit is STAGED failu
# ❌ commit NE "issiuncia failus i staged", o atvirksciai

# Removing files
git rm file.txt               # istrina faila + stage deletion
git rm -r folder/             # rekursyviai istrina folderi
git rm --cached file.txt      # nuima faila is git, bet palieka diske
git rm -f file.txt            # force remove (jei konfliktai)

# Undo / reset
git reset --soft HEAD~1       # undo commit, palieka staged
git reset HEAD~1              # undo commit, unstaged
git reset --hard HEAD~1       # ❌ visiskai istrina commit + failus (PAVOJINGA)
git reset --hard              # ❌ istrina VISUS local pakeitimus

# Branches
git branch                    # parodo branchus
git branch name               # sukuria nauja brancha
git checkout name             # pereina i brancha
git checkout -b name          # sukuria + pereina i brancha

# Merge
git merge branch-name         # sumergina branch-name i dabartini brancha

# Remote
git push origin main          # issiuncia commitus i GitHub
git fetch                     # parsisiuncia remote info, nemergina
git pull                      # fetch + merge

# Stash
git stash                     # issaugo pakeitimus be commit
git stash pop                 # grazina ir istrina stash
git stash apply               # grazina, bet palieka stash

# Revert vs reset
git revert COMMIT_ID          # saugu, sukuria nauja commit
git reset COMMIT_ID           # ❌ perraso istorija (tik local)

# Rebase
git rebase target-branch
# perraso commit istorija (naudoti atsargiai)
